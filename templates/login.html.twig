{% extends "template.html.twig" %}

{% block title %}BestBit Login{% endblock %}

{% block content %}
    
<h1><font size="5" color="red">Login</font></h1>

{% if loginFailed %}
    <p>Invalid username or password</p>
{% endif %}

<form method="post">
    <table border="0">
        <tr>
            <td>Username:</td><td><input type="text" name="username" value="{{v.name}}"></td>
        </tr>
        <tr>
            <td>Password:</td><td><input type="password" name="pass" value="{{v.pass}}"></td>
        </tr>
        <tr>
            <td><a href="http://bestbid.ipd8.info/fblogin/">Facebook login</a></td><td align="right"><input class="button-big" type="submit" value="Login"></td>
        </tr>
    </table>
</form>

{% endblock %}