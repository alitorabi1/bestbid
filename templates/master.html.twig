                        //opts += '<option value="' + data[i].ID + '">' + data[i].name + '</option>';
                    }
                    opts += "</div></li>";

                    //$("#main_" + id).html(opts);
                    $("#mainu_" + id).html(opts);
                });
            }

            $(document).ready(function () {
                showMainCategory();

            });
        </script>
